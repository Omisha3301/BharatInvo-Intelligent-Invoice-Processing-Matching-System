{
    "extends": "../tsconfig.json",
    "include": [
        "./src/**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "**/*.test.ts"
    ],
    "compilerOptions": {
        "noEmit": false,
        "outDir": "../dist/server",
        "rootDir": "./src",
        "module": "CommonJS", // Node prefers this
        "target": "ES2020",
        "declaration": false
    }
}